<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@color/white"
    android:paddingHorizontal="16dp"
  >

    <TextView
        android:id="@+id/value_given"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="100 kilometer"
        android:textColor="@color/dark_grey"
        android:fontFamily="@font/nunito_medium"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/value_recieved"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/arrow_history"
        android:drawablePadding="8dp"
        android:text="62.137 miles"
        android:fontFamily="@font/nunito_regular"
        android:textColor="@color/blue_color"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/unit_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/value_given"
        app:layout_constraintStart_toStartOf="@id/value_given"
        android:text="Length"
        android:paddingVertical="4dp"
        android:paddingHorizontal="16dp"
        android:textSize="12sp"
        android:fontFamily="@font/nunito_regular"
        android:layout_marginTop="8dp"
        android:textColor="@color/dark_blue"
        android:background="@drawable/blue_bg"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/light_grey"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/unit_name"/>

</androidx.constraintlayout.widget.ConstraintLayout>
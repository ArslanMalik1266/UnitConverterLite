<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingHorizontal="8dp"
  >

    <TextView
        android:id="@+id/value_given"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="100"
        android:textColor="@color/dark_gray"
        android:fontFamily="@font/nunito_bold"
        android:textSize="16sp"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/value_given_unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="kilometer"
        android:layout_marginStart="4dp"
        android:textColor="@color/dark_gray"
        android:fontFamily="@font/nunito_medium"
        app:layout_constraintStart_toEndOf="@id/value_given"
        app:layout_constraintTop_toTopOf="@id/value_given"
        app:layout_constraintBottom_toBottomOf="@id/value_given"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/value_recieved"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/arrow_history"
        android:drawablePadding="8dp"
        android:fontFamily="@font/nunito_semi_bold"
        android:text="62.137"
        android:layout_marginTop="12dp"
        android:textColor="@color/app_color"
        android:textSize="16sp"
        android:layout_marginEnd="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/value_recieved_unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       app:layout_constraintTop_toBottomOf="@id/value_recieved"
        app:layout_constraintEnd_toEndOf="@id/value_recieved"
        android:text="miles"
        android:fontFamily="@font/nunito_regular"
        android:textColor="@color/dark_gray"
        android:textSize="12sp"/>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/unit_name_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/value_given"
        app:layout_constraintStart_toStartOf="@id/value_given"
        android:layout_marginTop="8dp"
        app:cardCornerRadius="16dp"
        app:strokeColor="@color/app_color"
        app:strokeWidth="0.5dp"
        android:backgroundTint="@color/appContrast">

        <TextView
            android:id="@+id/unit_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Length"
            android:textSize="12sp"
            android:paddingVertical="4dp"
            android:paddingHorizontal="16dp"
            android:fontFamily="@font/nunito_regular"
            android:textColor="@color/app_color"
            android:gravity="center"/>

    </com.google.android.material.card.MaterialCardView>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/stroke"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/unit_name_card"/>

</androidx.constraintlayout.widget.ConstraintLayout>
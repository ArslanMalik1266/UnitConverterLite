<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".fragments.HistoryFragment">


    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topAppBar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/white"
            app:navigationIcon="@drawable/back_arrow"
            app:title="Settings"
            app:titleTextColor="@color/dark_grey" />
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <TextView
            android:id="@+id/light_mode_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/light_mode"
            android:drawablePadding="8dp"
            android:text="Light Mode"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Switch
            android:id="@+id/mode_swtich"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/light_mode_tv"
            app:layout_constraintBottom_toBottomOf="@id/light_mode_tv"
            android:thumbTint="@color/white"
            android:track="@drawable/custom_swtich_track"/>

        <View
            android:id="@+id/light_mode_view"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/light_grey"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/light_mode_tv"/>

        <TextView
            android:id="@+id/notifications_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/notifications"
            android:drawablePadding="8dp"
            android:text="Notifications"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_marginTop="12dp"
            app:layout_constraintStart_toStartOf="@id/light_mode_view"
            app:layout_constraintTop_toBottomOf="@id/light_mode_view" />

        <Switch
            android:id="@+id/notifications_swtich"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/notifications_tv"
            app:layout_constraintBottom_toBottomOf="@id/notifications_tv"
            android:thumbTint="@color/white"
            android:track="@drawable/custom_swtich_track"/>

        <View
            android:id="@+id/notifications_view"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/light_grey"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/notifications_tv"/>

        <TextView
            android:id="@+id/auto_save_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/history_autosave"
            android:drawablePadding="8dp"
            android:text="Auto Save History"
            android:textColor="@color/black"
            android:layout_marginTop="12dp"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/notifications_view"
            app:layout_constraintStart_toStartOf="@id/notifications_view"/>

        <Switch
            android:id="@+id/autosave_swtich"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/auto_save_tv"
            app:layout_constraintBottom_toBottomOf="@id/auto_save_tv"
            android:thumbTint="@color/white"
            android:track="@drawable/custom_swtich_track"
            />

        <View
            android:id="@+id/auto_save_view"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/light_grey"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/auto_save_tv"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".fragments.UnitConverterFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/unitConverter_appBar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/white"
            app:navigationIcon="@drawable/back_arrow"
            app:title="Time"
            app:titleTextAppearance="@style/ToolbarTitle" />


    </com.google.android.material.appbar.AppBarLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint_one"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="24dp"
        android:visibility="gone"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <EditText
            android:id="@+id/value_one"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/values_border"
            android:padding="4dp"
            android:layout_marginEnd="4dp"
            android:fontFamily="@font/nunito_regular"
            android:gravity="center_horizontal"
            android:inputType="numberDecimal"
            android:text="0"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintEnd_toStartOf="@id/value_one_spinner"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/value_one_spinner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:fontFamily="@font/nunito_regular"
            android:gravity="center_vertical"
            android:drawableRight="@drawable/arrow_down_icon"
            android:padding="8dp"
            android:text="Select Unit"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@id/value_one"
            app:layout_constraintBottom_toBottomOf="@+id/value_one"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/value_one" />

        <ImageView
            android:id="@+id/switching_unit_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:padding="8dp"
            android:src="@drawable/switching_unit_icon"
            app:layout_constraintEnd_toEndOf="@id/value_one_spinner"
            app:layout_constraintStart_toStartOf="@id/value_one"
            app:layout_constraintTop_toBottomOf="@id/value_one" />

        <EditText
            android:id="@+id/value_two"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:background="@drawable/values_border"
            android:padding="4dp"
            android:layout_marginEnd="4dp"
            android:fontFamily="@font/nunito_regular"
            android:gravity="center_horizontal"
            android:inputType="numberDecimal"
            android:text="0"
            android:textColor="@color/app_color"
            android:textSize="18sp"
            app:layout_constraintEnd_toStartOf="@id/value_two_spinner"
            app:layout_constraintStart_toStartOf="@id/value_one"
            app:layout_constraintTop_toBottomOf="@id/switching_unit_icon" />


        <TextView
            android:id="@+id/value_two_spinner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito_regular"
            android:gravity="center_vertical"
            android:drawableRight="@drawable/arrow_down_icon"
            android:padding="8dp"
            android:text="Select Unit"
            android:textColor="@color/app_color"
            app:layout_constraintBottom_toBottomOf="@id/value_two"
            app:layout_constraintEnd_toEndOf="parent"
            android:popupBackground="@color/white"
            app:layout_constraintStart_toEndOf="@id/value_two"
            app:layout_constraintTop_toTopOf="@id/value_two"/>





    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/percentage_UI"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/percentage_tab_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tabIndicatorColor="@color/app_color"
            app:tabIndicatorFullWidth="true"
            app:tabSelectedTextColor="@color/app_color"
            app:tabTextColor="@color/light_gray" />

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/percentage_view_pager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/percentage_tab_layout" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ratio_UI"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="24dp"
        android:visibility="gone"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">


        <TextView
            android:id="@+id/x_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito_regular"
            android:text="X"
            android:textColor="@color/light_gray"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/x_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@color/stroke"
            android:fontFamily="@font/nunito_medium"
            android:gravity="center"
            android:inputType="numberDecimal"
            android:padding="8dp"
            android:text="0"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@id/x_tv"
            app:layout_constraintTop_toBottomOf="@id/x_tv" />

        <TextView
            android:id="@+id/y_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/nunito_semi_bold"
            android:text="Y"
            android:textColor="@color/light_gray"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@id/x_value"
            app:layout_constraintTop_toBottomOf="@id/x_value" />

        <EditText
            android:id="@+id/y_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@color/stroke"
            android:fontFamily="@font/nunito_medium"
            android:gravity="center"
            android:inputType="numberDecimal"
            android:padding="8dp"
            android:text="0"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@id/y_tv"
            app:layout_constraintTop_toBottomOf="@id/y_tv" />

        <TextView
            android:id="@+id/result_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/nunito_semi_bold"
            android:text="@string/result"
            android:textColor="@color/light_gray"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@id/y_value"
            app:layout_constraintTop_toBottomOf="@id/y_value" />

        <EditText
            android:id="@+id/result_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@color/stroke"
            android:fontFamily="@font/nunito_medium"
            android:gravity="center"
            android:inputType="numberDecimal"
            android:padding="8dp"
            android:text=""
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@id/result_tv"
            app:layout_constraintTop_toBottomOf="@id/result_tv" />





    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bmi_UI"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:visibility="gone"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">


        <TextView
            android:id="@+id/feet_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="12dp"
            android:fontFamily="@font/nunito_regular"
            android:text="feet"
            android:textColor="@color/light_gray"
            android:textSize="16sp"
            app:layout_constraintEnd_toStartOf="@id/inches_tv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/feet_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@color/stroke"
            android:fontFamily="@font/nunito_medium"
            android:gravity="center"
            android:inputType="numberDecimal"
            android:padding="8dp"
            android:text="0"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@+id/feet_tv"
            app:layout_constraintStart_toStartOf="@id/feet_tv"
            app:layout_constraintTop_toBottomOf="@id/feet_tv" />

        <TextView
            android:id="@+id/inches_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:fontFamily="@font/nunito_regular"
            android:text="@string/inch"
            android:textColor="@color/light_gray"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@id/feet_tv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/feet_tv"
            app:layout_constraintTop_toTopOf="@id/feet_tv" />

        <EditText
            android:id="@+id/inches_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@color/stroke"
            android:fontFamily="@font/nunito_medium"
            android:gravity="center"
            android:inputType="numberDecimal"
            android:padding="8dp"
            android:text="0"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@id/inches_tv"
            app:layout_constraintStart_toStartOf="@id/inches_tv"
            app:layout_constraintTop_toBottomOf="@id/inches_tv" />

        <TextView
            android:id="@+id/weight_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/nunito_regular"
            android:text="@string/weight"
            android:textColor="@color/light_gray"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@id/feet_value"
            app:layout_constraintTop_toBottomOf="@id/feet_value" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/weight_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@color/stroke"
            app:layout_constraintStart_toStartOf="@id/weight_tv"
            app:layout_constraintTop_toBottomOf="@id/weight_tv">

            <EditText
                android:id="@+id/weight_value"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:fontFamily="@font/nunito_medium"
                android:gravity="center"
                android:inputType="numberDecimal"
                android:padding="8dp"
                android:text="0"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/kg_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_medium"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:text="kg"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />



        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/result_tv_bmi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/result"
            android:fontFamily="@font/nunito_regular"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@id/weight_container"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/weight_container"/>

        <EditText
            android:id="@+id/result_bmi_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/stroke"
            android:gravity="center"
            android:fontFamily="@font/nunito_medium"
            android:textSize="16sp"
            android:layout_marginTop="8dp"
            android:padding="8dp"
            app:layout_constraintStart_toStartOf="@id/result_tv_bmi"
            app:layout_constraintTop_toBottomOf="@id/result_tv_bmi"/>




    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/keyboard_constraint"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <com.google.android.material.button.MaterialButton
            android:id="@+id/copy_result_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:backgroundTint="@color/app_color"
            android:text="Copy Result"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:visibility="gone"
            app:icon="@drawable/copy_result_icon"
            app:iconGravity="textStart"
            app:iconPadding="8dp"
            app:iconTint="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/keyoboard_grid_layout" />

        <GridLayout
            android:id="@+id/keyoboard_grid_layout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:paddingBottom="8dp"
            android:padding="8dp"
            android:background="@color/contrast"
            android:layoutDirection="ltr"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHeight_percent="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>




    </androidx.constraintlayout.widget.ConstraintLayout>




</androidx.coordinatorlayout.widget.CoordinatorLayout>
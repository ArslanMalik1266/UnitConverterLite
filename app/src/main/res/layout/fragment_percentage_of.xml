<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="24dp"
    tools:context=".fragments.PercentageOfFragment">

<TextView
    android:id="@+id/what_is_tv"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="What is"
    android:fontFamily="@font/nunito_regular"
    android:textSize="18sp"
    android:textColor="@color/light_gray"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent" />
    <EditText
        android:id="@+id/what_is_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0"
        android:fontFamily="@font/nunito_medium"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:inputType="numberDecimal"
        app:layout_constraintStart_toStartOf="@id/what_is_tv"
        app:layout_constraintTop_toBottomOf="@id/what_is_tv"
        android:layout_marginTop="16dp"
        android:background="@color/stroke"
        android:padding="8dp"
        android:gravity="center"/>

    <TextView
        android:id="@+id/percentage_of_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="% Of"
        android:textColor="@color/light_gray"
        android:textSize="18sp"
        android:fontFamily="@font/nunito_semi_bold"
        app:layout_constraintStart_toStartOf="@id/what_is_value"
        app:layout_constraintTop_toBottomOf="@id/what_is_value"
        android:layout_marginTop="16dp"/>

    <EditText
        android:id="@+id/percent_of_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0"
        android:fontFamily="@font/nunito_medium"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:inputType="numberDecimal"
        app:layout_constraintStart_toStartOf="@id/percentage_of_tv"
        app:layout_constraintTop_toBottomOf="@id/percentage_of_tv"
        android:layout_marginTop="16dp"
        android:background="@color/stroke"
        android:padding="8dp"
        android:gravity="center"/>

    <TextView
        android:id="@+id/result_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Result"
        android:textColor="@color/light_gray"
        android:textSize="18sp"
        android:fontFamily="@font/nunito_semi_bold"
        app:layout_constraintStart_toStartOf="@id/percent_of_value"
        app:layout_constraintTop_toBottomOf="@id/percent_of_value"
        android:layout_marginTop="16dp"/>
    <EditText
        android:id="@+id/result_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:fontFamily="@font/nunito_medium"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:inputType="numberDecimal"
        app:layout_constraintStart_toStartOf="@id/result_tv"
        app:layout_constraintTop_toBottomOf="@id/result_tv"
        android:layout_marginTop="16dp"
        android:background="@color/stroke"
        android:padding="8dp"
        android:gravity="center"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/copy_result_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="48dp"
        android:backgroundTint="@color/app_color"
        android:fontFamily="@font/nunito_medium"
        android:padding="12dp"
        android:text="Copy Result"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:icon="@drawable/copy_result_icon"
        app:iconGravity="textStart"
        app:iconPadding="8dp"
        app:iconTint="@color/white"
        app:layout_constraintEnd_toEndOf="@id/result_value"
        app:layout_constraintStart_toStartOf="@id/result_value"
        app:layout_constraintTop_toBottomOf="@id/result_value" />



</androidx.constraintlayout.widget.ConstraintLayout>
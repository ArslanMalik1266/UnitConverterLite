<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="24dp"
    tools:context=".fragments.PercentageOfFragment">


    <EditText
        android:id="@+id/value_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0"
        android:fontFamily="@font/nunito_medium"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:inputType="numberDecimal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:drawableEnd="@drawable/perc_icon"
        android:drawableTint="@color/black"
        android:layout_marginTop="16dp"
        android:paddingStart="18dp"
        android:background="@color/light_grey"
        android:padding="8dp"
        android:gravity="center"/>

    <ImageView
        android:id="@+id/add_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/nunito_semi_bold"
        android:src="@drawable/add_icon"
        android:textColor="@color/text_grey"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/value_one"
        app:layout_constraintStart_toStartOf="@id/value_one"
        app:layout_constraintTop_toBottomOf="@id/value_one" />

    <EditText
        android:id="@+id/value_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@color/light_grey"
        android:fontFamily="@font/nunito_medium"
        android:gravity="center"
        android:inputType="numberDecimal"
        android:padding="8dp"
        android:text="0"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/add_icon"
        app:layout_constraintStart_toStartOf="@id/add_icon"
        app:layout_constraintTop_toBottomOf="@id/add_icon" />

    <TextView
        android:id="@+id/result_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/nunito_semi_bold"
        android:text="Result"
        android:textColor="@color/text_grey"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/value_one"
        app:layout_constraintTop_toBottomOf="@id/value_two" />
    <EditText
        android:id="@+id/result_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:fontFamily="@font/nunito_medium"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:inputType="numberDecimal"
        app:layout_constraintStart_toStartOf="@id/result_tv"
        app:layout_constraintTop_toBottomOf="@id/result_tv"
        android:layout_marginTop="16dp"
        android:background="@color/light_grey"
        android:padding="8dp"
        android:gravity="center"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/copy_result_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Copy Result"
        android:textColor="@color/white"
        android:fontFamily="@font/nunito_medium"
        app:icon="@drawable/copy_result_icon"
        app:iconGravity="textStart"
        android:padding="12dp"
        app:iconPadding="8dp"
        android:textSize="16sp"
        app:iconTint="@color/white"
        android:backgroundTint="@color/blue_color"
        app:layout_constraintTop_toBottomOf="@id/result_value"
        app:layout_constraintStart_toStartOf="@id/result_value"
        app:layout_constraintEnd_toEndOf="@id/result_value"
        android:layout_marginTop="48dp"
        android:layout_marginHorizontal="32dp"/>



</androidx.constraintlayout.widget.ConstraintLayout>
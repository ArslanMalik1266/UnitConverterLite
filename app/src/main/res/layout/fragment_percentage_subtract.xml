<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    tools:context=".fragments.PercentageOfFragment">


    <EditText
        android:id="@+id/value_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0"
        android:fontFamily="@font/nunito_medium"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:inputType="numberDecimal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:drawableEnd="@drawable/perc_icon"
        android:drawableTint="@color/black"
        android:layout_marginTop="8dp"
        android:paddingStart="18dp"
        android:background="@color/stroke"
        android:padding="8dp"
        android:gravity="center"/>

    <ImageView
        android:id="@+id/minus_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:padding="6dp"
        android:fontFamily="@font/nunito_semi_bold"
        android:src="@drawable/minus_icon"
        android:textColor="@color/light_gray"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/value_one"
        app:layout_constraintStart_toStartOf="@id/value_one"
        app:layout_constraintTop_toBottomOf="@id/value_one" />

    <EditText
        android:id="@+id/value_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@color/stroke"
        android:fontFamily="@font/nunito_medium"
        android:gravity="center"
        android:inputType="numberDecimal"
        android:padding="8dp"
        android:text="0"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/minus_icon"
        app:layout_constraintStart_toStartOf="@id/minus_icon"
        app:layout_constraintTop_toBottomOf="@id/minus_icon" />

    <TextView
        android:id="@+id/result_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/nunito_semi_bold"
        android:text="Result"
        android:textColor="@color/light_gray"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/value_one"
        app:layout_constraintTop_toBottomOf="@id/value_two" />
    <EditText
        android:id="@+id/result_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:fontFamily="@font/nunito_medium"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:inputType="numberDecimal"
        app:layout_constraintStart_toStartOf="@id/result_tv"
        app:layout_constraintTop_toBottomOf="@id/result_tv"
        android:layout_marginTop="8dp"
        android:background="@color/stroke"
        android:padding="8dp"
        android:gravity="center"/>





</androidx.constraintlayout.widget.ConstraintLayout>